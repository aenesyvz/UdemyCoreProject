@model UdemyCoreProject.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/sky/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/sky/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/sky/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/sky/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/sky/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/sky/images/logo.svg" alt="logo">
                            </div>
                            <h4>Hesabın yok mu?</h4>
                            <h6 class="font-weight-light">Kolaylıkla hemen kendine hesap oluştur.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                    <input type="text" asp-for="Surname" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adı</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Fotoğrafınız</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" class="form-control" asp-for="ImageUrl">
                                </div>
                                <div class="form-group">
                                    <label>Email Adresi</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="text" class="form-control" asp-for="Mail">
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="text" class="form-control" asp-for="Password">
                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrarı</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="text" class="form-control" asp-for="ConfirmPassword">
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">    </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/sky/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/sky/js/off-canvas.js"></script>
    <script src="~/sky/js/hoverable-collapse.js"></script>
    <script src="~/sky/js/template.js"></script>
    <script src="~/sky/js/settings.js"></script>
    <script src="~/sky/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>