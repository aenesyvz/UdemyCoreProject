@using EntityLayer.Concrete
@model List<Announcement>  
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{ string color = "";}
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if(item.Status == "Yeni Yazı")
                            {
                                color = "danger";
                            }
                            else if(item.Status == "Yeni Video")
                            {
                                color = "warning";
                            }
                            else if(item.Status == "Konferans")
                            {
                                color = "info";
                            }
                            else
                            {
                                color = "success";
                            }
                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="badge badge-@color">@item.Status</label></td>
                                <td><label class="badge badge-outline-dark" >Detaylar</label></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

