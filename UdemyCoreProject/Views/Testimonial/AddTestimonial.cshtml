@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            
            <p class="card-description"> Yeni Referans Ekleme Sayfası </p>
            <form asp-action="AddTestimonial">
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" asp-for="@Model.ClientName" class="form-control" id="exampleInputName1" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şirket</label>
                    <input type="text" asp-for="@Model.Company" class="form-control" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Görsel Url</label>
                    <input type="text" asp-for="@Model.ImageUrl" class="form-control" id="exampleInputPassword4" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Balşık</label>
                    <input type="text" asp-for="@Model.Title" class="form-control" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yorum</label>
                    <textarea  asp-for="@Model.Comment" class="form-control" rows="6"></textarea>>
                </div>
                
                
               
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>


