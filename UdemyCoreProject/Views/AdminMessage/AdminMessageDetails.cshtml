@model EntityLayer.Concrete.WriterMessage 
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AdminMessageDetails", "AdminMessage", FormMethod.Get))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İletişim Detay</h4>
                @Html.HiddenFor(x => x.WriterMessageId)
            <form class="forms-sample">
                @Html.Label("Gönderenin Adı")
                @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })

                <br />
                @Html.Label("Gönderenin Maili")
                @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })

                <br />

                @Html.Label("Gönderenin Maili")
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })

    
                <br />

                @Html.Label("Gönderim Tarihi")
                @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })

                <br />

                @Html.Label("Tarih")
                @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })

                <br/>
                <a asp-action="ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
                <a asp-action="SenderMessageList" class="btn btn-primary mr-2">Admin Giden Mesajlar</a>
            </form>
            </div>
        </div>
    </div>

}


