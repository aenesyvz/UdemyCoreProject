@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AddAdminMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddAdminMessage", "AddAdminMessage", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin İleti Gönderme</h4>

                <form class="forms-sample">
                    @Html.Label("Konu")
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })

                    <br />

                    @Html.Label("Alıcı")
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })

                    

                    <br/>
                    @Html.Label("Mesaj")
                    @Html.TextAreaFor(x => x.MessageContent,10,3, new { @class = "form-control" })
                    <button class="btn btn-info">Kaydet</button>
                </form>
            </div>
        </div>
    </div>

}



