@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hakkımda Düzenleme</h4>
                
                    <form class="forms-sample">
                        @Html.HiddenFor(x=>x.AboutId)
                        <div class="form-group">
                            <label for="exampleInputName1">Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Yaş</label>
                            @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword4">Görsel Url</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Telefon</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword4">Email Adresi</label>
                            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Adres</label>
                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword4">Açıklama</label>
                            @Html.TextAreaFor(x => x.Description,10,3, new { @class = "form-control" })
                        </div>
                        
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                        <button class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

}

