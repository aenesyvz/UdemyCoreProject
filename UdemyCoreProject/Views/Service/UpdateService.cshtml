@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Ekleme</h4>

                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceId)

                    @Html.Label("Başlık")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

                    <br />

                    @Html.Label("Görsel Yolu")
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })

                    <br />

                    <button class="btn btn-info">Kaydet</button>

                </form>
            </div>
        </div>
    </div>
}

